<% if @article.errors.any? %>
    <h2>The following errors prevented the article from getting created.</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ul>
<% end %>

<div class="container" >
        <%= form_for @article do |f| %>
        <!-- TITLE -->
        <div class="form-group row" >
            <label>
                <%= f.label :title %>
            </label>
            <div class="col-sm-10" >
                <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true  %>
            </div>
        </div>

        <!-- DESCRIPTION -->
        <div class="form-group row" >
            <label>
                <%= f.label :description %>
            </label>
            <div class="col-sm-8" >
                <%= f.text_area :description, class: "form-control", placeholder: "Body of article" %>
            </div>
        </div>

        <!-- SUBMIT BUTTON -->
        <div class="form-group row" >
            <div class="col-sm-10" >
                <%= f.submit class: "btn btn-primary btn-lg" %>
                <%= link_to "Back to article listing", articles_path %>
            </div>
        </div>

        <% end %>
</div>
